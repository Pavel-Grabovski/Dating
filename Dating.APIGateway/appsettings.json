{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "YarpProxy": {
        "Routes": {
            "command-service-api": {
                "ClusterId": "authentication-api",
                "Match": {
                    "Path": "api/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "api/{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "authentication-api": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:1030"
                    }
                }
            }
        }
    }
}
